<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/stylesHeader.css">
    <link rel="stylesheet" href="/css/styleRegister.css">
    <link rel="stylesheet" href="/css/stylesHeader.css">
    <link rel="stylesheet" href="/css/footer.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@1,200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Ephesis&display=swap" rel="stylesheet"> 
    <link rel="SHORTCUT ICON" href="/img/icono.png">
</head>



<body>
    
    <div class="main2">
        <div class="logo" id="logo-registro">
        <img src="/images/5.png" alt="logo comercial">
        </div>
       
        <h4>Estás a un paso de ingresar a la comunidad  </h4>
        <ul class = "errores"></ul>
        <form action="/usuario/detalle" method="POST" class="form" enctype="multipart/form-data">

            <div class="nombre">
                <input type="text" id="nombre_usuario" name="nombre_usuario" placeholder="Nombre">
                <% if (locals.errors && errors.nombre_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.nombre_usuario.msg %> 

                    </div>
                    <% } %>
            </div>
            <div class="apellido">
                <input type="text" id="apellido_usuario" name="apellido_usuario" placeholder="Apellido">
                <% if (locals.errors && errors.apellido_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.apellido_usuario.msg %> 

                    </div>
                    <% } %>
            </div>
            <div class="user">
                <input type="text" id="cuenta_usuario" placeholder="Nombre de Usuario" name="cuenta_usuario">
                <% if (locals.errors && errors.cuenta_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.cuenta_usuario.msg %> 

                    </div>
                    <% } %>
            </div>
            <div class="mail-userProfile">
                <input type="email" id="correo_usuario" placeholder="Correo Electrónico" name="correo_usuario">
                <% if (locals.errors && errors.correo_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.correo_usuario.msg %> 
                   </div>
                    <% } %>
            </div>   
            <div class="nacimiento">
                <label for="nacimiento">Fecha de Nacimiento</label>
                <input type="date" id="fecha_nacimiento" name="fecha_nacimiento">
                <% if (locals.errors && errors.fecha_nacimiento) { %>
                    <div class ="text-danger">
                       <%= errors.fecha_nacimiento.msg %> 

                    </div>
                    <% } %>
            </div>
            <select name="residencia_usuario" id="residencia_usuario"class="domicilio">
                <option value="">Elegí país de residencia</option>
                <% 
                let paises = ['Argentina', 'Bolivia', 'Brasil', 'Colombia', 'Chile', 'Ecuador', 'Paraguay', 'Perú', 'Uruguay', 'Venezuela']
                %>
                <% for (const unPais of paises){ %>
                    <option value="<%= unPais %>"> <%= unPais%> </option>
                <% } %>
                <% if (locals.errors && errors.residencia_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.residencia_usuario.msg %> 

                    </div>
                    <% } %>
            </select>

            <div class="intereses">
                <h4>Intereses</h4>
                <div class="checks">
                    <input type="checkbox" id="id_categoria_preferida" name="id_categoria_preferida"value="1">
                    <label for="deportes">Deportes</label>
                </div>
                <div class="checks">
                    <input type="checkbox" id="id_categoria_preferida" name="id_categoria_preferida"value="2">
                    <label for="metaverso">Metaverso</label>
                </div>
                <div class="checks">
                    <input type="checkbox" id="id_categoria_preferida" name="id_categoria_preferida"value="3">
                    <label for="juegos">Juegos</label>
                </div>    
                <div class="checks">
                    <input type="checkbox" id="id_categoria_preferida" name="id_categoria_preferida"value="4">
                    <label for="investigacion">Investigación</label>
                </div>    
                <div class="checks">
                    <input type="checkbox" id="id_categoria_preferida" name="id_categoria_preferida"value="5">
                    <label for="Mercados">Mercados</label>
                </div>
            </div>

            <div class="foto">
                <label for="foto">Foto de Perfil</label>
                <input type="file" id="filename" name="filename">
            </div>

            <div class="passR">
                <input type="password" id="contrasena_usuario"  placeholder="Contraseña" name="contrasena_usuario">
                <% if (locals.errors && errors.contrasena_usuario) { %>
                    <div class ="text-danger">
                       <%= errors.contrasena_usuario.msg %> 

                    </div>
                    <% } %>
            </div>

            <div class="passR">
                <input type="password" id="password"  placeholder="Contraseña" name="password">
                <% if (locals.errors && errors.password) { %>
                    <div class ="text-danger">
                       <%= errors.password.msg %> 

                    </div>
                    <% } %>
            </div>

            <div class="tarjeta">
                
            </div>

            <div class="botones">
                <button type="submit">Enviar</a></button>
                <button type="reset" style="cursor: pointer;">Borrar</button>
            </div>

        </form>

    </div>


<%- include("../partials/footer")  %> 


<script src="/js/registro.js"></script>
</body>
</html>